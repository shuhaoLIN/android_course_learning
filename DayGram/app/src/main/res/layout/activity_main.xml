<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F1ED"
        tools:context="com.example.daygram.MainActivity"
        >
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dataListView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="60dp"
            android:divider="@null"
    />

    <LinearLayout
            android:id="@+id/month_item"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#F2F1ED"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="gone"
    >
       <com.example.horizontalListview.HorizontalListView
               android:id="@+id/month_hlv"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/year_item"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#F2F1ED"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="gone"
    >
        <com.example.horizontalListview.HorizontalListView
                android:id="@+id/year_hlv"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/all_menu"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#F2F1ED"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            >
        <ImageView
                android:src="@drawable/buttom_button_left"
                android:layout_width="40dp"
                android:layout_height="match_parent"/>
        <!--<Spinner-->
                <!--android:id="@+id/monthChioceSpinner"-->
                <!--android:entries="@array/month_arr"-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@null"-->
                <!--android:drawableLeft="@drawable/buttom_button_left"-->
                <!--android:drawableRight="@drawable/buttom_button_center"-->
        <!--/>-->
        <Button
                android:id="@+id/get_month_item"
                android:text="JANUARY"
                android:textSize="15dp"
                android:background="#F2F1ED"
                android:layout_width="100dp"
                android:layout_height="match_parent"/>
        <ImageView
                android:id="@+id/monthRight"
                android:src="@drawable/buttom_button_center"
                android:layout_width="40dp"
                android:layout_height="match_parent"/>
        <!--<Spinner-->
                <!--android:id="@+id/yearChioceSpinner"-->
                <!--android:entries="@array/year_arr"-->
                <!--android:layout_width="60dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@null"-->
                <!--android:drawableLeft="@drawable/buttom_button_left"-->
                <!--android:drawableRight="@drawable/buttom_button_center"-->
        <!--/>-->
        <Button
                android:id="@+id/get_year_item"
                android:text="2018"
                android:textSize="15dp"
                android:background="#F2F1ED"
                android:layout_width="60dp"
                android:layout_height="match_parent"/>
        <ImageView
                android:src="@drawable/buttom_button_center"
                android:layout_width="40dp"
                android:layout_height="match_parent"/>
        <Button
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:id="@+id/addBtnButtom"
                    android:background="#F2F1ED"
                    android:text="+"
                    android:textSize="30dp"
        />
        <ImageView
                android:src="@drawable/buttom_button_center"
                android:layout_width="40dp"
                android:layout_height="match_parent"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/showMonthBtn"
                android:src="@drawable/buttom_long_button"
        />

        </LinearLayout>

</RelativeLayout>
